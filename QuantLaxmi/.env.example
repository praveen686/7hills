# Zerodha Kite Connect
ZERODHA_API_KEY=your_api_key
ZERODHA_API_SECRET=your_api_secret
ZERODHA_USER_ID=your_user_id
ZERODHA_PASSWORD=your_password
ZERODHA_TOTP_SECRET=your_totp_secret

# Binance (HMAC — legacy)
BINANCE_API_KEY=your_binance_key
BINANCE_API_SECRET=your_binance_secret

# Binance (Ed25519 — recommended)
BINANCE_API_KEY_ED25519=your_ed25519_api_key
# Option A: inline PEM (replace newlines with \n)
# BINANCE_ED25519_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMC4C...base64...=\n-----END PRIVATE KEY-----"
# Option B: path to .pem file
# BINANCE_ED25519_PRIVATE_KEY_PATH=/path/to/binance_private_key.pem

# Google OAuth (optional — for Google login on landing page)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Telegram
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE=+91xxxxxxxxxx

# Paths (defaults work for standard setup)
QUANTLAXMI_MODE=paper
